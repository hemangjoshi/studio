rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIREBASE SECURITY RULES
     * 
     * - users: Private profile access (owner only).
     * - codeSnippets: Public read for public snippets, owner read/write for all.
     * - globalChatMessages: Authenticated read/create, owner update/delete.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- User Profiles ---
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // --- Code Snippets ---
    match /codeSnippets/{snippetId} {
      // Allow list and get if public OR if the authenticated user is the author.
      // We use 'read' to cover both 'get' and 'list' with the same logic.
      allow read: if resource.data.isPublic == true || (isSignedIn() && resource.data.authorId == request.auth.uid);
      
      // Creation requires the user to be signed in and set themselves as author.
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      
      // Updates and deletes are restricted to the author.
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }

    // --- Global Chat ---
    match /globalChatMessages/{messageId} {
      // Any signed-in user can read the global chat history.
      allow read: if isSignedIn();
      
      // Users can only create messages where they are the verified sender.
      allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
      
      // Users can only manage their own messages.
      allow update, delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }
  }
}